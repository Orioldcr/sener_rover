<?xml version="1.0" ?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="rover_inertia_macros.xacro" />

    <material name="grey">
        <color rgba="0.7 0.7 0.7 1" />
    </material>

    <material name="green">
        <color rgba="0 0.6 0 1" />
    </material>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <!--   BASE link       -->
    <link name="base_link">
        
    </link>

    <!--   CHASSIS   -->
    <link name="chassis">
        <visual>
            <geometry>
                <box size="0.6 0.4 0.2" />                  <!--Dimensiones base-->
            </geometry>
            <material name="green" />
        </visual>

        <collisions>
            <geometry>
                <box size="0.6 0.4 0.2" />                  <!--Dimensiones base-->
            </geometry>
        </collisions>
        
        <xacro:inertial_box mass="0.5" x="0.6" y="0.4" z="0.2" >
            <origin xyz="0 0 0.1" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    <!--    LIDAR   -->
    <link name="lidar_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="white" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <!--    RUEDAS   -->                        <!--     Definir dimensiones ruedas         -->
    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
            <material name="grey" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <link name="middle_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
            <material name="grey" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <link name="rear_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
            <material name="grey" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
            <material name="grey" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <link name="middle_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
            <material name="grey" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <link name="rear_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
            <material name="grey" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <!--    STEERING    -->
    <link name="front_right_steering">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </visual>
    </link>

    <link name="rear_right_steering">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </visual>
    </link>
 
    <link name="front_left_steering">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </visual>
    </link>

    <link name="rear_left_steering">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </visual>
    </link>



    <!--     JOINTS                   ### MEDIDAS A DEFINIR ###-->
    <joint name="base_link_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="0 0 0.25" rpy="0 0 0" />   
    </joint>

    <joint name="base_lidar_joint" type="fixed">
        <parent link="chassis" />
        <child link="lidar_link" />
        <origin xyz="0 0 0.125" rpy="0 0 0" />   
    </joint>

    <joint name="front_right_steering_joint" type="revolute">
        <parent link="chassis" />
        <child link="front_right_steering" />
        <origin xyz="-0.3 0.3 -0.15" rpy="0 0 0" /> <!-- Cuanto sobresale sobre el eje z-->
        <axis xyz="0 0 1" />
        <limit lower="-1.57" upper="1.57" effort="10" velocity="1" />
    </joint>

    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="front_right_steering" />
        <child link="front_right_wheel" />
        <origin xyz="0 0 0" rpy="0 0 0" />  <!-- Cuanto sobresale sobre el eje z-->
        <axis xyz="0 1 0" />
    </joint>
    

    <joint name="middle_right_wheel_joint" type="continuous">
        <parent link="chassis" />
        <child link="middle_right_wheel" />
        <origin xyz="0 0.3 -0.15" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="rear_right_steering_joint" type="revolute">
        <parent link="chassis" />
        <child link="rear_right_steering" />
        <origin xyz="0.30 0.3 -0.15" rpy="0 0 0" />
        <axis xyz="0 0 1" />
        <limit lower="-1.57" upper="1.57" effort="10" velocity="1" />
    </joint>

    <joint name="rear_right_wheel_joint" type="continuous">
        <parent link="rear_right_steering" />
        <child link="rear_right_wheel" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="front_left_steering_joint" type="revolute">
        <parent link="chassis" />
        <child link="front_left_steering" />
        <origin xyz="-0.30 -0.3 -0.15" rpy="0 0 0" />  
        <axis xyz="0 0 1" />
        <limit lower="-1.57" upper="1.57" effort="10" velocity="1" />
    </joint>

    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="front_left_steering" />
        <child link="front_left_wheel" />
        <origin xyz="0 0 0" rpy="0 0 0" /> 
        <axis xyz="0 1 0" />
    </joint>

    <joint name="middle_left_wheel_joint" type="continuous">
        <parent link="chassis" />
        <child link="middle_left_wheel" />
        <origin xyz="0 -0.3 -0.15" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="rear_left_steering_joint" type="revolute">
        <parent link="chassis" />
        <child link="rear_left_steering" />
        <origin xyz="0.30 -0.3 -0.15" rpy="0 0 0" />
        <axis xyz="0 0 1" />
        <limit lower="-1.57" upper="1.57" effort="10" velocity="1" />
    </joint>

    <joint name="rear_left_wheel_joint" type="continuous">
        <parent link="rear_left_steering" />
        <child link="rear_left_wheel" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    

</robot>